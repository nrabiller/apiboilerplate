{
    "compilerOptions": {
        "outDir": "dist/src",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts",
        "src/**/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
